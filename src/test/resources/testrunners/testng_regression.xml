<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Demo Cart App Test Automation Regression Suite" thread-count="3" parallel="tests" verbose="3">


    <listeners>

         <listener
         class-name="com.qa.opencart.listeners.ExtentReportListener">
         </listener>

        <listener
                class-name="com.qa.opencart.listeners.TestAllureListener">
        </listener>

    </listeners>

    <test name="Login Page Test">
        <classes>
            <class name="com.qa.opencart.tests.LoginPageTest"/>
        </classes>
    </test>

    <test name="Accounts Page Test">
        <classes>
            <class name="com.qa.opencart.tests.AccountPageTest"/>
        </classes>
    </test>

    <test name="Product Info Page Test">
        <classes>
            <class name="com.qa.opencart.tests.ProductInfoTest"/>
        </classes>
    </test>

    <test name="Registration Page Test">
        <classes>
            <class name="com.qa.opencart.tests.RegistrationTest"/>
        </classes>
    </test>

</suite>